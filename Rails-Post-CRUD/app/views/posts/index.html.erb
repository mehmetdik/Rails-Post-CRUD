<h1>Our Blog</h1>

<% @posts.each do |post| %>
	<h2><%= link_to post.title, post %></h2>
	<p><%= post.content %></p>
	<p>
	<%= link_to "Edit", edit_post_path(post) %> |
	<%= link_to 'Delete', post,
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
	</p> 
	<hr />
	
<% end %>

<p><%= link_to "Add a New Post", new_post_path %></p>